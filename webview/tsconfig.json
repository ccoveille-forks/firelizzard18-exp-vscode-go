{
	"compilerOptions": {
		"module": "Node16", // VSCode 1.75 -> Electron 19.1.9 -> NodeJS 16.14.2 (https://github.com/ewanharris/vscode-versions)
		"target": "ES2022", // NodeJS 16.14.2 -> ES2022 (https://node.green/)
		"lib": [
			"ES2022",
			"dom"
		],
		"strict": true,
		"noEmit": true,
		"jsx": "react",               // Allow React-style JSX
		"jsxFactory": "createElement" // But use our custom factory
	}
}